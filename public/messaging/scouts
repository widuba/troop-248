    </nav>

    <div id="auth-bar">
      <div id="auth-info">Signed in as …</div>
      <button id="logout-btn" type="button">Log Out</button>
    </div>
  </header>

  <main>
    <div class="card">
      <div class="row">
        <div>
          <div style="font-weight:900; font-size:18px;">Scout Messaging</div>
          <div class="muted small" id="accessLine">Checking access…</div>
        </div>
        <div class="badge" id="accessBadge">Loading</div>
      </div>
      <div class="hr"></div>
      <div class="muted small">
        Shows the <strong>last 100</strong> messages. Scouts who are <strong>Viewer</strong> or <strong>Admin</strong> can send.
        Adults can read but cannot send.
      </div>
    </div>

    <div class="card" id="errorCard" style="display:none;"></div>

    <div class="card">
      <div class="row" style="align-items:flex-end;">
        <div class="muted small" id="liveStatus">Loading messages…</div>
        <div class="counter" id="countStatus">—</div>
      </div>
      <div class="hr"></div>

      <div class="messages" id="messagesBox" aria-live="polite"></div>
    </div>

    <div class="card composer" id="composerCard" style="display:none;">
      <div class="row">
        <div style="font-weight:900;">Send a message</div>
        <div class="counter"><span id="charCount">0</span>/500</div>
      </div>
      <div class="hr"></div>

      <textarea id="msgInput" maxlength="500" placeholder="Type your message (max 500 characters)…"></textarea>

      <div class="row" style="margin-top:10px;">
        <button class="btn primary" id="sendBtn" type="button">Send</button>
        <div class="muted small" id="sendStatus"></div>
      </div>
    </div>
  </main>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-app.js";
    import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-auth.js";
    import {
      getFirestore,
      doc,
      getDoc,
      collection,
      query,
      orderBy,
      limit,
      onSnapshot,
      addDoc,
      serverTimestamp
    } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-firestore.js";

    const firebaseConfig = {
      apiKey: "AIzaSyD5qUHa2JuQ3iI7U3DrX7JDyhx76PGzhxM",
      authDomain: "troop-248.firebaseapp.com",
      projectId: "troop-248",
      storageBucket: "troop-248.firebasestorage.app",
      messagingSenderId: "925363875752",
      appId: "1:925363875752:web:0b001c1a7a09fb8232f79d",
      measurementId: "G-NY75GX5TBH"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // UI
    const authInfoEl = document.getElementById("auth-info");
    const logoutBtn = document.getElementById("logout-btn");

    const accessLine = document.getElementById("accessLine");
    const accessBadge = document.getElementById("accessBadge");
    const errorCard = document.getElementById("errorCard");

    const liveStatus = document.getElementById("liveStatus");
    const countStatus = document.getElementById("countStatus");
    const messagesBox = document.getElementById("messagesBox");

    const composerCard = document.getElementById("composerCard");
    const msgInput = document.getElementById("msgInput");
    const charCount = document.getElementById("charCount");
    const sendBtn = document.getElementById("sendBtn");
    const sendStatus = document.getElementById("sendStatus");

    let currentUser = null;
    let myInfo = null;
    let canView = false;
    let canSend = false;
    let unsub = null;

    function showError(msg){
      errorCard.style.display = "block";
      errorCard.className = "card error";
      errorCard.textContent = msg;
    }
    function clearError(){
      errorCard.style.display = "none";
      errorCard.textContent = "";
    }

    function escapeHtml(str){
      return String(str ?? "")
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    function normalizeRole(authRole){
      const r = (authRole || "").toString().trim().toLowerCase();
      if (r === "admin") return "admin";
      if (r === "viewer") return "viewer";
      return "pending";
    }

    function normalizeAccountType(t){
      const s = (t || "").toString().trim().toLowerCase();
      if (s === "scout") return "scout";
      if (s === "parent") return "parent";
      if (s === "leader") return "leader";
      return "unknown";
    }

    function setAccessUI(){
      if (!canView) {
        accessLine.textContent = "You do not have access to view this chat.";
        accessBadge.textContent = "No Access";
        accessBadge.className = "badge warn";
        composerCard.style.display = "none";
        return;
      }

      if (canSend) {
        accessLine.textContent = "You can read and send messages (Scout Viewer/Admin).";
        accessBadge.textContent = "Can Send";
        accessBadge.className = "badge ok";
        composerCard.style.display = "block";
      } else {
        accessLine.textContent = "You can read messages (Adults are read-only).";
        accessBadge.textContent = "Read Only";
        accessBadge.className = "badge";
        composerCard.style.display = "none";
      }
    }

    function formatTime(ts){
      try {
        if (!ts) return "";
        const d = ts.toDate ? ts.toDate() : new Date(ts);
        if (isNaN(d.getTime())) return "";
        return d.toLocaleString(undefined, {
          year: "numeric", month: "short", day: "numeric",
          hour: "numeric", minute: "2-digit"
        });
      } catch {
        return "";
      }
    }

    function renderMessages(docs){
      // docs are newest-first (desc). We want oldest-first display.
      const items = [...docs].reverse();

      messagesBox.innerHTML = items.map(m => {
        const data = m.data() || {};
        const name = (data.senderName || "Unknown").toString();
        const text = (data.text || "").toString();
        const when = formatTime(data.createdAt);

        return `
          <div class="msg">
            <div class="msg-top">
              <div class="msg-name">${escapeHtml(name)}</div>
              <div class="msg-meta">${escapeHtml(when)}</div>
            </div>
            <div class="msg-text">${escapeHtml(text)}</div>
          </div>
        `;
      }).join("");

      countStatus.textContent = `${items.length}/100`;
      // Auto-scroll to bottom on first load / updates
      messagesBox.scrollTop = messagesBox.scrollHeight;
    }

    function startListening(){
      if (unsub) { unsub(); unsub = null; }
      if (!canView) return;

      const qy = query(
        collection(db, "scoutMessages"),
        orderBy("createdAt", "desc"),
        limit(100)
      );

      liveStatus.textContent = "Live.";
      unsub = onSnapshot(qy, (snap) => {
        clearError();
        renderMessages(snap.docs);
      }, (err) => {
        showError("Error loading messages: " + (err?.message || String(err)));
        liveStatus.textContent = "Offline.";
      });
    }

    msgInput.addEventListener("input", () => {
      charCount.textContent = String((msgInput.value || "").length);
    });

    async function sendMessage(){
      if (!currentUser || !myInfo) return;
      if (!canSend) return;

      const text = (msgInput.value || "").trim();
      if (!text) {
        sendStatus.textContent = "Type a message first.";
        return;
      }
      if (text.length > 500) {
        sendStatus.textContent = "Message is too long (max 500).";
        return;
      }

      sendBtn.disabled = true;
      sendStatus.textContent = "Sending…";

      try {
        const senderName =
          (myInfo.fullName && String(myInfo.fullName).trim()) ||
          (currentUser.email || currentUser.uid);

        await addDoc(collection(db, "scoutMessages"), {
          text,
          createdAt: serverTimestamp(),
          uid: currentUser.uid,
          senderName: senderName,
          senderType: normalizeAccountType(myInfo.accountType)
        });

        msgInput.value = "";
        charCount.textContent = "0";
        sendStatus.textContent = "Sent.";
      } catch (err) {
        sendStatus.textContent = "Error: " + (err?.message || String(err));
      } finally {
        sendBtn.disabled = false;
        setTimeout(() => { sendStatus.textContent = ""; }, 2000);
      }
    }

    sendBtn.addEventListener("click", sendMessage);

    logoutBtn.addEventListener("click", async () => {
      await signOut(auth);
      window.location.replace("/");
    });

    onAuthStateChanged(auth, async (user) => {
      try {
        clearError();

        if (!user) {
          window.location.replace("/");
          return;
        }

        currentUser = user;
        authInfoEl.textContent = `Signed in as ${user.email || user.uid}`;

        const infoSnap = await getDoc(doc(db, "accountInfo", user.uid));
        if (!infoSnap.exists()) {
          window.location.replace("/under-review/");
          return;
        }

        myInfo = infoSnap.data() || {};
        const role = normalizeRole(myInfo.authRole);
        const acct = normalizeAccountType(myInfo.accountType);

        // ✅ Access rules (client-side)
        // - Adults (parent/leader): can view always, cannot send
        // - Scouts: only viewer/admin can view + send
        canView = (acct === "parent" || acct === "leader") || (acct === "scout" && (role === "viewer" || role === "admin"));
        canSend = (acct === "scout" && (role === "viewer" || role === "admin"));

        setAccessUI();
        startListening();
      } catch (err) {
        showError("Error checking access: " + (err?.message || String(err)));
      }
    });
  </script>
</body>
</html>
