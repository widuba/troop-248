  <main>
    <div class="card">
      <div class="top-row">
        <div>
          <h1>Account</h1>
          <p class="muted">Update your profile. ‚ÄúNotes‚Äù can include positions (SPL, ASPL, Patrol Leader, Committee, etc.).</p>
        </div>
        <div id="role-badge"></div>
      </div>

      <div class="kv">
        <div class="k">Account Level</div><div class="v" id="levelText">Loading‚Ä¶</div>
        <div class="k">Account Type</div><div class="v" id="typeText">Loading‚Ä¶</div>
        <div class="k">UID</div><div class="v" id="uidText">Loading‚Ä¶</div>
      </div>
    </div>

    <section>
      <h2 style="margin:0 0 8px; font-size:18px;">Edit Profile</h2>

      <div class="row">
        <div>
          <label for="fullName">Full Name</label>
          <input id="fullName" type="text" autocomplete="name" placeholder="First Last" />
        </div>
        <div>
          <label for="emailDisplay">Email (current)</label>
          <input id="emailDisplay" type="email" disabled />
        </div>
      </div>

      <label for="notes">Notes / Positions</label>
      <textarea id="notes" placeholder="Example: Patrol Leader (Ravens), SPL, Committee Chair, etc."></textarea>

      <button id="saveBtn" class="btn" type="button">Save Changes</button>
      <div id="saveMsg" class="msg"></div>
    </section>

    <section>
      <h2 style="margin:0 0 8px; font-size:18px;">Change Email (optional)</h2>
      <p class="muted" style="margin:0 0 8px;">
        This changes the Firebase sign-in email. You‚Äôll need your password again for security.
      </p>

      <div class="row">
        <div>
          <label for="newEmail">New Email</label>
          <input id="newEmail" type="email" autocomplete="email" placeholder="new@example.com" />
        </div>
        <div>
          <label for="confirmPassword">Confirm Password</label>
          <input id="confirmPassword" type="password" autocomplete="current-password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
        </div>
      </div>

      <button id="changeEmailBtn" class="btn danger" type="button">Change Email</button>
      <div id="emailMsg" class="msg"></div>
    </section>
